    href: "70m",
    about1: "Габариты дома",
    about2: "11,20 × 9,50 м",
    data: [
      { name: "Гостиная",
        value: "14,4",
        underline: true
      },
      { name: "Спальня 1",
        value: "8,7",
      },
      { name: "Спальня 2",
        value: "10,2",
      },
      { name: "Спальня 3",
